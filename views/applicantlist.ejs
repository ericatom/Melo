<!DOCTYPE html>
<html lang="en">
    <head>
        <title>View Applicants</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
        <link rel="stylesheet" href="css/site.css">
    </head>
    <body>
        <div class="text-center">
            <h1>List of Applicants</h1>
            <div class="container">
                <div class="row">
                    <% for(var i = 0;i < applicantList.length; i++){ %>
                    <div class="col-md-4">
                        <div class="card" style="width: 18rem;">
                            <img class="card-img-top" src="img/profile-placeholder.jpg" alt="Card image cap">
                            <div class="card-body">
                            <h5 class="card-title"><%= applicantList[i].firstName + " " + applicantList[i].lastName%></h5>
                            <a href="/list/<%= applicantList[i].id %>" class="btn btn-primary">View</a>
                            </div>
                        </div>
                    </div>
                <% } %>
                </div>
            </div>
        </div>
    </body>
</html>